<%- include('./partials/header.ejs') %>
<script>
    function reload(){
        setTimeout(() => {
        window.location.reload();
        }, 1000);
    }
    
</script>
<h2>Compose a new note</h2>
<form action="/compose" method="post">
    <div class="form-group mt-5">
        <label for="note-title">
            Note Title
        </label>
        <input type="text" class="form-control" id="note-title" name="note-title" placeholder="Enter note title">
    </div>

    <div class="form-group">
        <label for="note-body">
            Note Body
        </label>
        <textarea class="form-control" id="new-note" name="note-body" rows="5" placeholder="Start writing here...."></textarea>
    </div>

        <button type="submit" class="btn btn-primary w-25 mt-3" onsubmit="reload()">Submit</button>

</form>
